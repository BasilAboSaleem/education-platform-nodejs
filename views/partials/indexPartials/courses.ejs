<style>
  .fixed-thumb {
    height: 220px;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 10px;
  }

  .fixed-thumb img {
    height: 100%;
    width: auto;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .fixed-thumb img:hover {
    transform: scale(1.05);
  }

  .down-content h4 {
    font-size: 20px;
    font-weight: 600;
    margin-top: 10px;
    color: #2a2a2a;
  }

  .down-content .author {
    color: #aaa;
    font-size: 14px;
  }
</style>

<section class="section courses" id="courses">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <div class="section-heading">
          <h6>Latest Courses</h6>
          <h2>Latest Courses</h2>
        </div>
      </div>
    </div>

    <ul class="event_filter">
      <li><a class="is_active" href="#!" data-filter="*">Show All</a></li>
      <li><a href="#!" data-filter=".design">Webdesign</a></li>
      <li><a href="#!" data-filter=".development">Development</a></li>
      <li><a href="#!" data-filter=".wordpress">Wordpress</a></li>
    </ul>

    <div class="row event_box">
      <% courses.forEach(course => { %>
        <div class="col-lg-4 col-md-6 align-self-center mb-30 event_outer <%= course.category.name %>">
          <div class="events_item">
            <div class="thumb fixed-thumb">
              <a href="#"><img src="<%= course.image %>" alt=""></a>
              <span class="category"><%= course.category.name %></span>
              <span class="price"><h6><em>$</em><%= course.price %></h6></span>
            </div>
            <div class="down-content">
              <span class="author"><%= course.teacher?.user?.name || "Unknown Teacher" %></span>
              <h4><%= course.title %></h4>
            </div>
          </div>
        </div>
      <% }) %>
    </div>

    <div class="text-center mt-4">
      <a href="/register" class="main-button">Discover More</a>
    </div>
  </div>
</section>
