<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Teacher Dashboard - Send Notification</title>
  <link rel="stylesheet" href="/assets/vendors/feather/feather.css" />
  <link rel="stylesheet" href="/assets/vendors/mdi/css/materialdesignicons.min.css" />
  <link rel="stylesheet" href="/assets/vendors/css/vendor.bundle.base.css" />
  <link rel="stylesheet" href="/assets/css/style.css" />
  <link rel="stylesheet" href="/assets/vendors/ti-icons/css/themify-icons.css" />
  <link rel="stylesheet" href="/assets/vendors/simple-line-icons/css/simple-line-icons.css" />
</head>
<body class="with-welcome-text">
  <div class="container-scroller">
    <%- include('../../../partials/starAdminpartials/_navbar.ejs') %>
    <div class="container-fluid page-body-wrapper">
      <%- include('../../../partials/starAdminpartials/_sidebar.ejs') %>
      <div class="main-panel">
        <div class="content-wrapper">

          <% if (error && error.length > 0) { %>
            <div class="alert alert-danger"><%= error[0] %></div>
          <% } %>

          <% if (success && success.length > 0) { %>
            <div class="alert alert-success"><%= success[0] %></div>
          <% } %>

          <div class="page-header">
            <h3 class="page-title">Send Notification to Course Students</h3>
          </div>

          <div class="row">
            <div class="col-md-8 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Notification Details</h4>
                  <form action="/teacher/send-notification" method="POST">
                    <!-- اختيار الكورس -->
                    <div class="form-group">
                      <label for="courseId">Select Course</label>
                      <select id="courseId" name="course" class="form-control" required>
                        <option value="">-- Choose Course --</option>
                        <% courses.forEach(course => { %>
                          <option value="<%= course._id %>"><%= course.title %></option>
                        <% }) %>
                      </select>
                    </div>

                    <!-- عنوان الإشعار -->
                    <div class="form-group">
                      <label for="title">Notification Title</label>
                      <input type="text" class="form-control" id="title" name="title" required />
                    </div>

                    <!-- نص الإشعار -->
                    <div class="form-group">
                      <label for="message">Notification Message</label>
                      <textarea class="form-control" id="message" name="message" rows="3" required></textarea>
                    </div>

                    <!-- رابط اختياري -->
                    <div class="form-group">
                      <label for="link">Notification Link (Optional)</label>
                      <input type="text" class="form-control" id="link" name="link" />
                    </div>

                    <button type="submit" class="btn btn-primary">Send Notification</button>
                  </form>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

  <script src="/assets/vendors/js/vendor.bundle.base.js"></script>
  <script src="/assets/vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
  <script src="/assets/vendors/chart.js/chart.umd.js"></script>
  <script src="/assets/vendors/progressbar.js/progressbar.min.js"></script>
  <script src="/assets/js/off-canvas.js"></script>
  <script src="/assets/js/template.js"></script>
  <script src="/assets/js/settings.js"></script>
  <script src="/assets/js/hoverable-collapse.js"></script>
  <script src="/assets/js/todolist.js"></script>
  <script src="/assets/js/dashboard.js"></script>
  <script src="/assets/js/jquery.cookie.js" type="text/javascript"></script>
</body>
</html>
