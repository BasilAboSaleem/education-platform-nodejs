<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Verify Your Email - Learnova</title>
  <link rel="stylesheet" href="vendor/bootstrap/css/bootstrap.min.css" />
  <link rel="stylesheet" href="assets/css/fontawesome.css" />
  <link rel="stylesheet" href="assets/css/templatemo-scholar.css" />
  <link rel="stylesheet" href="assets/css/owl.css" />
  <link rel="stylesheet" href="assets/css/animate.css" />
  <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
  <style>
    /* إضافة تباعد بين الحقول */
    form fieldset {
      margin-bottom: 20px;
    }
    #otpError {
      color: #ff5d79;
      margin-left: 0.4rem;
      font-weight: 600;
    }
  </style>
</head>

<body>
  <!-- Header -->
  <header class="header-area header-sticky">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <nav class="main-nav">
            <a href="/" class="logo"><h1>Learnova</h1></a>
            <ul class="nav">
              <li><a href="/" class="active">Home</a></li>
              <li><a href="register" class="btn btn-outline-primary">Register</a></li>
            </ul>
            <a class="menu-trigger"><span>Menu</span></a>
          </nav>
        </div>
      </div>
    </div>
  </header>

  <!-- Verify Section -->
  <section class="contact-us section" style="margin-top: 80px;">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-6">
          <form id="verifyForm" action="/verify" method="post">
            <div class="row">
              <div class="col-lg-12">
                <h2 class="text-center mb-4">Verify Your Email</h2>
              </div>
              <div class="col-lg-12">
                <fieldset>
                  <input type="text" name="otp" id="otpId" class="form-control" placeholder="Enter Verification Code" required />
                  <span id="otpError"></span> <!-- عنصر لعرض الخطأ -->
                </fieldset>
              </div>
              <div class="col-lg-12">
                <fieldset>
                  <button type="submit" id="verify-submit" class="btn btn-primary w-100">Verify</button>
                </fieldset>
              </div>
              <div class="col-lg-12 text-center mt-3">
                <p>Didn't receive the code? <a href="/resend-verification">Resend</a></p>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Scripts -->
  <script>
    const form = document.getElementById("verifyForm");

    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      // إخفاء الأخطاء القديمة
      document.getElementById("otpError").textContent = "";

      const formData = {
        otp: document.getElementById("otpId").value,
      };

      const res = await fetch("/verify", {
        method: "POST",
        body: JSON.stringify(formData),
        headers: { "Content-Type": "application/json" },
      });

      const data = await res.json();

      console.log(data); // عرض المحتوى بالكامل في الـ console

      if (data.invalidOtp) {
        document.getElementById("otpError").textContent = "Invalid verification code. Please try again.";
        console.log(data.invalidOtp);
      }

      if (data.success && data.redirectTo) {
        window.location.href = data.redirectTo; // إعادة التوجيه إلى الصفحة المطلوبة بعد التحقق
      }
    });
  </script>

  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.min.js"></script>
  <script src="assets/js/isotope.min.js"></script>
  <script src="assets/js/owl-carousel.js"></script>
  <script src="assets/js/counter.js"></script>
  <script src="assets/js/custom.js"></script>
</body>

</html>
