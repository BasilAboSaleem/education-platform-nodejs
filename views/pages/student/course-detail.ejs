<body class="with-welcome-text">
  <div >
    <!-- partials/starAdminpartials/_navbar.ejs -->
   <%- include('../../partials/starAdminpartials/_navbar.ejs') %>
    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
      <!-- partials/starAdminpartials/_sidebar.ejs -->
      <%- include('../../partials/starAdminpartials/_sidebar.ejs') %>
      <!-- Content -->
      <div class="main-panel">
      <div class="content-wrapper px-3">

      <!-- course-details.ejs -->

<div class="container mt-5 course-details">
    <!-- Header -->
    <div class="course-header row">
      <div class="col-md-6">
        <img src="<%= course.image %>" alt="<%= course.title %>" class="course-banner img-fluid rounded">
      </div>
      <div class="col-md-6">
        <h2 class="mb-3"><%= course.title %></h2>
        <p><strong>Instructor:</strong> <%= course.teacher.user.name %></p>
        <span class="badge bg-secondary"><%= course.category.name %></span>
  
        <p class="price mt-3">
          <% if (course.price === 0) { %>
            <span class="text-success h4">Free</span>
          <% } else { %>
            <span class="text-primary h4">$<%= course.price %></span>
          <% } %>
        </p>
        <form action="/student/all-courses/course/<%= course._id %>/enroll" method="post">
          <button type="submit" class="btn btn-primary mt-3">
            <% if (course.price === 0) { %> Enroll Now <% } %>
            <% if (course.price > 0) { %> Buy Now <% } %>

             
          </button>
        </form>
      
        
      </div>
    </div>
  
    <!-- Description -->
    <div class="course-description mt-5">
      <h4>Description</h4>
      <p><%= course.description %></p>
    </div>
  
    <!-- Lessons -->
    <section class="course-content mt-5">
        <h4 class="mb-4">Course Lessons</h4>
        <ul class="list-group">
            <% if (course.lessons.length === 0) { %>
             
              <li class="list-group-item">No lessons available for this course.</li>
            <% } %>
          <% course.lessons.forEach((lesson, index) => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <div class="d-flex align-items-center">
                <span class="badge bg-primary me-3"><%= index + 1 %></span>
                <div>
                  <strong><%= lesson.title %></strong>
                  <% if (lesson.content) { %>
                    <div class="text-muted small"><%= lesson.content %></div>
                  <% } %>
                </div>
              </div>
              <div class="d-flex align-items-center">
                <% if (lesson.order) { %>
                  <span class="text-muted me-3"><i class="fas fa-clock me-1"></i><%= lesson.order %> min</span>
                <% } %>
                <% if (!lesson.videoUrl) { %>
                  <span class="text-muted small">Coming soon</span>

                <% }  %>
              
              </div>
            </li>
          <% }) %>
        </ul>
      </section>
      
  </div>
  


</div>
</div>

</div>

