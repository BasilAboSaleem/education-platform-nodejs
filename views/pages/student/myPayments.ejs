<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>My Payments</title>
        <link rel="stylesheet" href="/assets/vendors/feather/feather.css">
        <link rel="stylesheet" href="/assets/vendors/mdi/css/materialdesignicons.min.css">
        <link rel="stylesheet" href="/assets/vendors/css/vendor.bundle.base.css">
        <link rel="stylesheet" href="/assets/css/style.css">
        <link rel="stylesheet" href="/assets/vendors/ti-icons/css/themify-icons.css">
        <link rel="stylesheet" href="/assets/vendors/simple-line-icons/css/simple-line-icons.css">
    </head>
  <body class="with-welcome-text">
    <div class="container-scroller">
      <!-- Navbar -->
      <%- include('../../partials/starAdminpartials/_navbar.ejs') %>
      
      <div class="container-fluid page-body-wrapper">
        <!-- Sidebar -->
        <%- include('../../partials/starAdminpartials/_sidebar.ejs') %>

        <!-- Content -->
        <div class="main-panel">
            <div class="content-wrapper">
              
              <% if (error && error.length > 0) { %>
                <div class="alert alert-danger">
                  <%= error[0] %>
                </div>
              <% } %>
    
              <% if (success && success.length > 0) { %>
                <div class="alert alert-success">
                  <%= success[0] %>
                </div>
              <% } %>

              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">My Payments</h4>
                  <div class="table-responsive">
                    <table class="table table-hover">
                      <thead class="thead-light">
                        <tr>
                          <th>#</th>
                          <th>Date</th>
                          <th>Course Name</th>
                          <th>Amount</th>
                          <th>Payment Status</th>
                          <th>Payment Method</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% enrollments.forEach((enrollment, index) => { %>
                          <tr>
                            <td><%= index + 1 %></td>
                            <td><%= enrollment.enrolledAt.toLocaleDateString() %></td>
                            <td><%= enrollment.course.title %></td>
                            <td>$<%= enrollment.course.price %></td>
                            <td>
                              <% 
                                let badgeClass = "";
                                let statusLabel = enrollment.paymentStatus;
                              
                                if (enrollment.paymentStatus === "paid") {
                                  badgeClass = "badge-success";
                                  statusLabel = "Completed";
                                } else if (enrollment.paymentStatus === "unpaid") {
                                  badgeClass = "badge-danger";
                                  statusLabel = "unpaid";
                                } else if (enrollment.paymentStatus === "free") {
                                  badgeClass = "badge-info";
                                  statusLabel = "free";
                                }
                              %>
                              <label class="badge <%= badgeClass %>"><%= statusLabel %></label>
                            </td>
                            <% if (enrollment.paymentStatus !== "paid") { %>
                             
                              <td colspan="5">_*_</td>
                            <% } else {%>
                         
                              <td><%= enrollment.paymentMethod.charAt(0).toUpperCase() + enrollment.paymentMethod.slice(1) %></td>
                            <% } %>

                          </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <script src="/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="/assets/vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script src="/assets/vendors/chart.js/chart.umd.js"></script>
    <script src="/assets/vendors/progressbar.js/progressbar.min.js"></script>
    <script src="/assets/js/off-canvas.js"></script>
    <script src="/assets/js/template.js"></script>
    <script src="/assets/js/settings.js"></script>
    <script src="/assets/js/hoverable-collapse.js"></script>
    <script src="/assets/js/todolist.js"></script>
    <script src="/assets/js/dashboard.js"></script>

    <script src="/assets/js/jquery.cookie.js" type="text/javascript"></script>
  </body>
</html>
