<body class="with-welcome-text">
  <div >
    <!-- partials/starAdminpartials/_navbar.ejs -->
   <%- include('../../partials/starAdminpartials/_navbar.ejs') %>
    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
      <!-- partials/starAdminpartials/_sidebar.ejs -->
      <%- include('../../partials/starAdminpartials/_sidebar.ejs') %>
      <!-- Content -->
      <div class="main-panel">
      <div class="content-wrapper px-3">
        <% if (error && error.length > 0) { %>
          <div class="alert alert-danger">
            <%= error[0] %>
          </div>
        <% } %>

        <% if (success && success.length > 0) { %>
          <div class="alert alert-success">
            <%= success[0] %>
          </div>
        <% } %>
        <div class="container mt-5">
            <h2>Mock Payment</h2>
            <p>Course: <%= enrollment.course.title %></p>
            <p>Amount: $<%= enrollment.course.price %></p>
          
            <form action="/student/course/<%= enrollment.course._id %>/payment" method="POST">
              <div class="form-group">
                <label for="paymentMethod">Select Payment Method:</label>
                <select name="paymentMethod" id="paymentMethod" class="form-control" required>
                  <option value="paypal">PayPal</option>
                  <option value="visa">Visa</option>
                  <option value="stripe">Stripe</option>
                  <option value="bank">Bank Transfer</option>
                  <option value="cash">Cash</option>
                </select>
              </div>
              <input type="hidden" name="transactionId" value="TXN-<%= Date.now() %>">

              <button type="submit" class="btn btn-success mt-3">Mock Pay Now</button>
            </form>
          </div>
          
          
        

</div>
</div>

</div>

