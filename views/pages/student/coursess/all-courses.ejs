<body class="with-welcome-text">
  <div >
    <!-- partials/starAdminpartials/_navbar.ejs -->
   <%- include('../../../partials/starAdminpartials/_navbar.ejs') %>
    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
      <!-- partials/starAdminpartials/_sidebar.ejs -->
      <%- include('../../../partials/starAdminpartials/_sidebar.ejs') %>
      <!-- Content -->
      <div class="main-panel">
      <div class="content-wrapper px-3">

        <div class="search-container" style="display: flex; justify-content: flex-end;">
          <form action="/admin/students/search" method="post" style="display: inline;">
            <input type="text" name="query" placeholder="Search for a course" class="form-control" style="display: inline-block; width: auto;">
            <button type="submit" class="btn btn-sm btn-primary">
              <i class="mdi mdi-magnify"></i> Search
            </button>
          </form>
        </div> <!-- padding من Bootstrap مباشرة -->
        <section class="section courses" id="courses">
          <div class="custom-courses-wrapper">
    
            <ul class="event_filter category-scroll">
              <li><a href="/student/all-courses" data-filter="*">Show All</a></li>
              <li><a href="/student/all-courses/free" data-filter=".free">Free</a></li>
              <% categories.forEach(category => { %>
                <li><a href="/student/all-courses/category/<%= category._id %>" data-filter=".<%= category._id %>"><%= category.name %></a></li>
              <% }) %>
            </ul>
    <div class="row event_box">
      <% courses.forEach(course => { %>
        <div class="col-lg-4 col-md-6 align-self-center mb-30 event_outer col-md-6">
          <div class="events_item">
            <div class="thumb">
              <a href="/student/all-courses/courseDetails/<%= course._id %>"><img src="<%= course.image %>" alt="" style="width: 100%; height: 200px; object-fit: cover; border-radius: 8px;"></a>
              <span class="category"><%= course.category.name %></span>
              <% if (course.price === 0) { %>
                <span class="price"><h6>free</h6></span>
              <% } else { %>
                <span class="price"><h6><em>$</em><%= course.price %></h6></span>
              <% } %>
            </div>
            <div class="down-content">
              <span class="author"><%= course.teacher.user.name %></span>
              <h4><%= course.title %></h4>
            </div>
          </div>
        </div>
      <% }) %>
     
    </div>
  </div>

</section>
</div>
</div>

</div>

  </div>
  <style>
    .section.courses {
  padding-top: 0 !important;
  margin-top: 0 !important;

}
.custom-courses-wrapper {
  width: 100%;
  padding: 0 15px;
  box-sizing: border-box;
}
.category-scroll {
  display: flex;
  overflow-x: auto;
  white-space: nowrap;
  gap: 10px;
  padding-bottom: 10px;
  scrollbar-width: thin; /* للفايرفوكس */
}

.category-scroll li {
  flex: 0 0 auto;
}
.category-scroll::-webkit-scrollbar {
  height: 6px;
}

.category-scroll::-webkit-scrollbar-thumb {
  background: #ccc;
  border-radius: 10px;
}




  
  </style>
<script>
  function toggleLoginDropdown(event) {
    event.preventDefault();
    const dropdown = event.target.closest('.login-dropdown');
    dropdown.classList.toggle('open');
  }
</script>


