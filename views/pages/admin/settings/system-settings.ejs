<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin Dashboard - System Settings</title>

  <!-- روابط CSS (بفرض ملفات القالب موجودة لديك) -->
  <link rel="stylesheet" href="/assets/vendors/feather/feather.css" />
  <link rel="stylesheet" href="/assets/vendors/mdi/css/materialdesignicons.min.css" />
  <link rel="stylesheet" href="/assets/vendors/css/vendor.bundle.base.css" />
  <link rel="stylesheet" href="/assets/vendors/ti-icons/css/themify-icons.css" />
  <link rel="stylesheet" href="/assets/vendors/simple-line-icons/css/simple-line-icons.css" />
  <link rel="stylesheet" href="/assets/css/style.css" />

  <style>
    body {
      background: #f9fafc;
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      color: #333;
    }
    .main-panel {
      padding: 2rem;
      max-width: 1000px;
      margin: 0 auto 4rem;
      background: white;
      border-radius: 12px;
      box-shadow: 0 8px 24px rgba(0,0,0,0.05);
    }

    h3.page-title {
      font-weight: 700;
      font-size: 2rem;
      margin-bottom: 1.5rem;
      color: #2e59d9;
    }

    form .section-title {
      font-weight: 600;
      font-size: 1.4rem;
      margin: 2rem 0 1rem;
      border-bottom: 2px solid #4e73df;
      padding-bottom: 0.3rem;
      color: #4e73df;
    }

    .form-group {
      margin-bottom: 1rem;
    }

    label {
      display: block;
      font-weight: 600;
      margin-bottom: 0.3rem;
      color: #555;
    }

    input[type="text"],
    input[type="email"],
    input[type="date"],
    select,
    textarea {
      width: 100%;
      padding: 0.55rem 0.75rem;
      border: 1px solid #ccc;
      border-radius: 8px;
      font-size: 1rem;
      transition: border-color 0.3s ease;
      resize: vertical;
    }
    input[type="text"]:focus,
    input[type="email"]:focus,
    input[type="date"]:focus,
    select:focus,
    textarea:focus {
      border-color: #4e73df;
      outline: none;
      box-shadow: 0 0 5px rgba(78, 115, 223, 0.4);
    }

    .form-check {
      display: flex;
      align-items: center;
      margin-bottom: 1rem;
    }
    .form-check input[type="checkbox"] {
      margin-right: 0.5rem;
      width: 18px;
      height: 18px;
      cursor: pointer;
    }
    .form-check label {
      margin: 0;
      cursor: pointer;
      font-weight: 600;
    }
    .form-check .text-danger {
      color: #e74a3b;
    }

    fieldset {
      border: 1px solid #ddd;
      border-radius: 10px;
      padding: 1rem 1.25rem;
      margin-bottom: 1.5rem;
      background: #fafafa;
    }
    legend {
      font-weight: 700;
      color: #4e73df;
      padding: 0 0.5rem;
      font-size: 1.1rem;
    }

    .form-row {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
    }
    .form-col {
      flex: 1 1 48%;
      min-width: 220px;
    }

    button.btn-primary {
      background-color: #4e73df;
      border: none;
      padding: 0.65rem 1.5rem;
      border-radius: 8px;
      font-weight: 600;
      font-size: 1rem;
      color: white;
      cursor: pointer;
      transition: background-color 0.3s ease;
      margin-top: 1.5rem;
      display: inline-block;
    }
    button.btn-primary:hover {
      background-color: #2e59d9;
    }

    button.btn-secondary {
      background-color: #6c757d;
      border: none;
      padding: 0.55rem 1rem;
      border-radius: 8px;
      font-weight: 600;
      color: white;
      cursor: pointer;
      transition: background-color 0.3s ease;
      margin-bottom: 1.5rem;
    }
    button.btn-secondary:hover {
      background-color: #5a6268;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .form-col {
        flex: 1 1 100%;
      }
    }
  </style>
</head>
<body>
  <div class="container-scroller">
    <%- include('../../../partials/starAdminpartials/_navbar.ejs') %>
    <div class="container-fluid page-body-wrapper">
      <%- include('../../../partials/starAdminpartials/_sidebar.ejs') %>

      <div class="main-panel">
        <h3 class="page-title">System Settings</h3>

        <form action="/admin/settings?_method=PUT" method="POST" class="settings-form">

          <!-- Basic Configuration -->
          <div class="section-title">Basic Configuration</div>
          <div class="form-group">
            <label for="siteName">Site Name</label>
            <input type="text" id="siteName" name="siteName" placeholder="Enter site name" value="<%= settings.siteName %>" />
          </div>

          <div class="form-group">
            <label for="siteEmail">Site Email</label>
            <input type="email" id="siteEmail" name="siteEmail" placeholder="Enter site email" value="<%= settings.siteEmail %>" />
          </div>

          <div class="form-group">
            <label for="defaultLanguage">Default Language</label>
            <select id="defaultLanguage" name="defaultLanguage">
              <option value="en" <%= settings.defaultLanguage === 'en' ? 'selected' : '' %>>English</option>
              <option value="ar" <%= settings.defaultLanguage === 'ar' ? 'selected' : '' %>>Arabic</option>
            </select>
          </div>

          <div class="form-check">
            <input type="checkbox" id="allowRegistration" name="allowRegistration" <%= settings.allowRegistration ? 'checked' : '' %> />
            <label for="allowRegistration">Allow User Registration</label>
          </div>

          <div class="form-check">
            <input type="checkbox" id="maintenanceMode" name="maintenanceMode" <%= settings.maintenanceMode ? 'checked' : '' %> />
            <label for="maintenanceMode" class="text-danger">Enable Maintenance Mode</label>
          </div>

          <div class="form-group">
            <label for="siteLogo">Site Logo URL</label>
            <input type="text" id="siteLogo" name="siteLogo" placeholder="Enter logo URL" value="<%= settings.siteLogo %>" />
          </div>

          <!-- Slider Items -->
          <div class="section-title">Header Slider Items</div>
          <div id="sliderItemsContainer">
            <% settings.sliderItems.forEach(function(slide, index) { %>
              <fieldset>
                <legend>Slide <%= index + 1 %></legend>

                <div class="form-group">
                  <label for="sliderItems_<%= index %>_backgroundImage">Background Image URL</label>
                  <input type="text" id="sliderItems_<%= index %>_backgroundImage" name="sliderItems[<%= index %>][backgroundImage]" value="<%= slide.backgroundImage %>" />
                </div>

                <div class="form-group">
                  <label for="sliderItems_<%= index %>_category">Category</label>
                  <input type="text" id="sliderItems_<%= index %>_category" name="sliderItems[<%= index %>][category]" value="<%= slide.category %>" />
                </div>

                <div class="form-group">
                  <label for="sliderItems_<%= index %>_title">Title</label>
                  <input type="text" id="sliderItems_<%= index %>_title" name="sliderItems[<%= index %>][title]" value="<%= slide.title %>" />
                </div>

                <div class="form-group">
                  <label for="sliderItems_<%= index %>_description">Description</label>
<textarea id="sliderItems_<%= index %>_description" name="sliderItems[<%= index %>][description]" rows="3"><%= slide.description %></textarea>
</div>
            <div class="form-group">
              <label for="sliderItems_<%= index %>_buttonText">Button Text</label>
              <input type="text" id="sliderItems_<%= index %>_buttonText" name="sliderItems[<%= index %>][buttonText]" value="<%= slide.buttonText %>" />
            </div>

            <div class="form-group">
              <label for="sliderItems_<%= index %>_buttonLink">Button Link</label>
              <input type="text" id="sliderItems_<%= index %>_buttonLink" name="sliderItems[<%= index %>][buttonLink]" value="<%= slide.buttonLink %>" />
            </div>
          </fieldset>
        <% }); %>
      </div>

      <button type="button" class="btn btn-primary" onclick="addNewSlide()">Add New Slide</button>

      <!-- Contact Section -->
      <div class="section-title">Contact Section</div>
      <div class="form-group">
        <label for="contactTitle">Contact Title</label>
        <input type="text" id="contactTitle" name="contactTitle" value="<%= settings.contactTitle %>" />
      </div>

      <div class="form-group">
        <label for="contactPhone">Contact Phone</label>
        <input type="text" id="contactPhone" name="contactPhone" value="<%= settings.contactPhone %>" />
      </div>

      <div class="form-group">
        <label for="contactEmail">Contact Email</label>
        <input type="email" id="contactEmail" name="contactEmail" value="<%= settings.contactEmail %>" />
      </div>

      <div class="form-group">
        <label for="contactAddress">Contact Address</label>
        <textarea id="contactAddress" name="contactAddress" rows="3"><%= settings.contactAddress %></textarea>
      </div>

<!-- About Section -->
<div class="section-title">About Section</div>

<div class="form-group">
  <label for="aboutTitle">About Title</label>
  <input type="text" id="aboutTitle" name="aboutSection[title]" value="<%= settings.aboutSection.title %>" />
</div>

<div class="form-group">
  <label for="aboutHeading">About Heading</label>
  <input type="text" id="aboutHeading" name="aboutSection[heading]" value="<%= settings.aboutSection.heading %>" />
</div>

<div class="form-group">
  <label for="aboutDescription">About Description</label>
  <textarea id="aboutDescription" name="aboutSection[description]" rows="5"><%= settings.aboutSection.description %></textarea>
</div>

<div class="form-group">
  <label for="aboutButtonText">Button Text</label>
  <input type="text" id="aboutButtonText" name="aboutSection[buttonText]" value="<%= settings.aboutSection.buttonText %>" />
</div>

<button type="submit" class="btn btn-primary">Save Settings</button>
</form>
</div>

</div>
</div>

<script>
  function addNewSlide() {
    const container = document.getElementById('sliderItemsContainer');
    const index = container.children.length;

    const fieldset = document.createElement('fieldset');
    fieldset.innerHTML = `
      <legend>Slide ${index + 1}</legend>
      <div class="form-group">
        <label for="sliderItems_${index}_backgroundImage">Background Image URL</label>
        <input type="text" id="sliderItems_${index}_backgroundImage" name="sliderItems[${index}][backgroundImage]" />
      </div>
      <div class="form-group">
        <label for="sliderItems_${index}_category">Category</label>
        <input type="text" id="sliderItems_${index}_category" name="sliderItems[${index}][category]" />
      </div>
      <div class="form-group">
        <label for="sliderItems_${index}_title">Title</label>
        <input type="text" id="sliderItems_${index}_title" name="sliderItems[${index}][title]" />
      </div>
      <div class="form-group">
        <label for="sliderItems_${index}_description">Description</label>
        <textarea id="sliderItems_${index}_description" name="sliderItems[${index}][description]" rows="3"></textarea>
      </div>
      <div class="form-group">
        <label for="sliderItems_${index}_buttonText">Button Text</label>
        <input type="text" id="sliderItems_${index}_buttonText" name="sliderItems[${index}][buttonText]" />
      </div>
      <div class="form-group">
        <label for="sliderItems_${index}_buttonLink">Button Link</label>
        <input type="text" id="sliderItems_${index}_buttonLink" name="sliderItems[${index}][buttonLink]" />
      </div>
    `;

    container.appendChild(fieldset);
  }
</script>

<script src="/assets/vendors/js/vendor.bundle.base.js"></script>
