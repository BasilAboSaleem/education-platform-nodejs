<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Admin Dashboard - Pending Lessons</title>
        <link rel="stylesheet" href="/assets/vendors/feather/feather.css">
        <link rel="stylesheet" href="/assets/vendors/mdi/css/materialdesignicons.min.css">
        <link rel="stylesheet" href="/assets/vendors/css/vendor.bundle.base.css">
        <link rel="stylesheet" href="/assets/css/style.css">
        <link rel="stylesheet" href="/assets/vendors/ti-icons/css/themify-icons.css">
        <link rel="stylesheet" href="/assets/vendors/simple-line-icons/css/simple-line-icons.css">

      </head>
  <body class="with-welcome-text">
    <div class="container-scroller">
      <!-- partials/starAdminpartials/_navbar.ejs -->
     <%- include('../../../partials/starAdminpartials/_navbar.ejs') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partials/starAdminpartials/_sidebar.ejs -->
        <%- include('../../../partials/starAdminpartials/_sidebar.ejs') %>
        <!-- Content -->
        <div class="main-panel">
            <div class="content-wrapper">
              <% if (error && error.length > 0) { %>
                <div class="alert alert-danger">
                  <%= error[0] %>
                </div>
              <% } %>
    
              <% if (success && success.length > 0) { %>
                <div class="alert alert-success">
                  <%= success[0] %>
                </div>
              <% } %>
              <div class="card">

              
                <div class="card-body">
                
                  <h4 class="card-title">Pending Lessons List</h4>
                  <div class="table-responsive">
                    <table class="table table-hover">
                      <thead class="thead-light">
                        <tr>
                          <th>#</th>
                          <th>Lesson Title</th>
                          <th>Courses Name</th>
                          <th>Teacher Name</th>
                          <th>Status</th>
                          <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% lessons.forEach((lesson , index) => { %>
                          <tr>
                            <td><%= index + 1 %></td>
                            <td><%= lesson.title %></td>
                            <td><%= lesson.course.title  %></td>
                            <td><%= lesson.course.teacher.user.name %></td>
                            
                            <td>
                                <% 
                                  // تعيين ألوان الحالة
                                  let badgeClass = "";
                                  if (lesson.status === "Under Review") {
                                    badgeClass = "badge-warning";  // اللون البرتقالي للمراجعة
                                  } else if (lesson.status === "Published") {
                                    badgeClass = "badge-success";  // اللون الأخضر للنشر
                                  } else if (lesson.status === "Rejected") {
                                    badgeClass = "badge-danger";  // اللون الأحمر للرفض
                                  }
                                %>
                                <label class="badge <%= badgeClass %>"><%= lesson.status %></label>
                              </td>
                              
                           
                            <td>
                              <!-- Actions هنا تبقى كما هي -->
                              <a href="/admin/pending-lessons/view/<%= lesson._id %>" class="btn btn-sm btn-info btn-icon-text">
                                <i class="mdi mdi-eye btn-icon-prepend"></i> View
                              </a>
                           
                              
                            </td>
                          </tr>
                        <% }) %>
                      </tbody>
                      
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <script src="/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="/assets/vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script src="/assets/vendors/chart.js/chart.umd.js"></script>
    <script src="/assets/vendors/progressbar.js/progressbar.min.js"></script>
    <script src="/assets/js/off-canvas.js"></script>
    <script src="/assets/js/template.js"></script>
    <script src="/assets/js/settings.js"></script>
    <script src="/assets/js/hoverable-collapse.js"></script>
    <script src="/assets/js/todolist.js"></script>
    <script src="/assets/js/dashboard.js"></script>

    <script src="/assets/js/jquery.cookie.js" type="text/javascript"></script>
    
  </body>
</html>