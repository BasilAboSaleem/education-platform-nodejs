<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Admin Dashboard - All Notifications</title>
        <link rel="stylesheet" href="/assets/vendors/feather/feather.css">
        <link rel="stylesheet" href="/assets/vendors/mdi/css/materialdesignicons.min.css">
        <link rel="stylesheet" href="/assets/vendors/css/vendor.bundle.base.css">
        <link rel="stylesheet" href="/assets/css/style.css">
        <link rel="stylesheet" href="/assets/vendors/ti-icons/css/themify-icons.css">
        <link rel="stylesheet" href="/assets/vendors/simple-line-icons/css/simple-line-icons.css">

      </head>
  <body class="with-welcome-text">
    <div class="container-scroller">
      <!-- partials/starAdminpartials/_navbar.ejs -->
     <%- include('../../../partials/starAdminpartials/_navbar.ejs') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partials/starAdminpartials/_sidebar.ejs -->
        <%- include('../../../partials/starAdminpartials/_sidebar.ejs') %>
        <!-- Content -->
        <div class="main-panel">
            <div class="content-wrapper">
              <% if (error && error.length > 0) { %>
                <div class="alert alert-danger">
                  <%= error[0] %>
                </div>
              <% } %>
    
              <% if (success && success.length > 0) { %>
                <div class="alert alert-success">
                  <%= success[0] %>
                </div>
              <% } %>
  
   <div class="page-header">
  <h3 class="page-title">All Notifications</h3>
</div>


<div class="container mt-5">

  <% if (notifications.length === 0) { %>
    <div class="alert alert-info">No notifications found.</div>
  <% } else { %>
   <div class="table-responsive">
   <table class="table table-bordered">
                      <thead class="thead-dark">
                        <tr>
                          <th>Title</th>
                          <th>Message</th>
                          <th>Target</th>
                          <th>Course</th>
                          <th>Link</th>
                          <th>Date</th>
                          <th>Status</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% notifications.forEach(n => { %>
                          <tr>
                            <td><%= n.title || '—' %></td>
                            <td><%= n.message %></td>
                           <td>
  <% if (!n.recipient) { %>
    <% if (n.course) { %>
      Students of course: <%= n.course.title %>
    <% } else if (n.targetRole === 'all') { %>
      All users
    <% } else if (n.targetRole === 'student') { %>
      All students
    <% } else if (n.targetRole === 'teacher') { %>
      All teachers
    <% } else { %>
      <%= n.targetRole %>
    <% } %>
  <% } else { %>
    Specific <%= n.recipient.role %>: <%= n.recipient.name %>
  <% } %>
</td>

                            <td><%= n.course ? n.course.title : '—' %></td>
                            <td>
                              <% if (n.link) { %>
                                <a href="<%= n.link %>" target="_blank">Open</a>
                              <% } else { %>
                                —
                              <% } %>
                            </td>
                            <td><%= n.createdAt.toLocaleString() %></td>
                            <td>
                              <% if (n.isRead) { %>
                                <span class="badge badge-success">Read</span>
                              <% } else { %>
                                <span class="badge badge-danger">Unread</span>
                              <% } %>
                            </td>
                          </tr>
                        <% }) %>
                      </tbody>
                    </table>
</div>

  <% } %>
</div>



    <script src="/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="/assets/vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script src="/assets/vendors/chart.js/chart.umd.js"></script>
    <script src="/assets/vendors/progressbar.js/progressbar.min.js"></script>
    <script src="/assets/js/off-canvas.js"></script>
    <script src="/assets/js/template.js"></script>
    <script src="/assets/js/settings.js"></script>
    <script src="/assets/js/hoverable-collapse.js"></script>
    <script src="/assets/js/todolist.js"></script>
    <script src="/assets/js/dashboard.js"></script>

    <script src="/assets/js/jquery.cookie.js" type="text/javascript"></script>
    
  </body>
</html>